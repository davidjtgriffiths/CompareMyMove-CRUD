{% extends 'base.html.twig' %}

{% block title %}Companies index{% endblock %}

{% block body %}
    <h1>Companies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Active</th>
                <th>Name</th>
                <th>Credits</th>
                <th>Description</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Website</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for company in companies %}
            <tr>
                <td>{{ company.id }}</td>
                <td>{{ company.active ? 'Yes' : 'No' }}</td>
                <td>{{ company.name }}</td>
                <td>{{ company.credits }}</td>
                <td>{{ company.description }}</td>
                <td>{{ company.email }}</td>
                <td>{{ company.phone }}</td>
                <td>{{ company.website }}</td>
                <td>
                    <a href="{{ path('app_companies_show', {'id': company.id}) }}">show</a>
                    <a href="{{ path('app_companies_edit', {'id': company.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_companies_new') }}">Create new</a>
{% endblock %}
